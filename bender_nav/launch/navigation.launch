<launch>

	<!-- Parametros -->
	<arg name="slam"         default="false"/>
	<arg name="map_name"     default="map"/>


	<!-- - - - L o c a l i z a t i o n - - - -->
	<group if="$(arg slam)">
		<!-- slam node -->
		<include file="$(find bender_nav)/launch/localization/gmapping.launch">
			<arg name="slam" value="true"/>
		</include>
	</group>
	<group unless="$(arg slam)">

		<!-- static map server -->
		<include file="$(find bender_maps)/launch/map_server.launch">
			<arg name="map_name" value="$(arg map_name)"/>
		</include>

		<!-- amcl -->
		<include file="$(find bender_nav)/launch/localization/amcl.launch"/>

	</group>
	
	<!-- - - - - P l a n n i n g  - - - - -->
	<!-- Move_Base -->
	<include file="$(find bender_nav)/launch/move_base.launch">
		<arg name="slam" value="$(arg slam)"/>
	</include>

	<!-- Goal Server -->
	<include file="$(find bender_nav)/launch/goal_server.launch">
		<arg name="slam" value="$(arg slam)"/>
	</include>


	<!-- - - - T  o  o  l  s - - - -->

	<!-- non slam specific tools -->
	<group unless="$(arg slam)">

		<!-- Map analyzer -->
		<include file="$(find bender_maps)/launch/map_analyzer.launch"/>

		<!-- amcl spreader-->
		<include file="$(find bender_navigation_utils)/launch/amcl_spreader.launch"/>

	</group>

</launch>
