<launch>

	<!-- Parametros -->
	<arg name="rviz"         default="true"/>
	<arg name="simulation"   default="false"/>
	<arg name="tf_gui"       default="false"/>
	<arg name="joy_number"   default="0"/>

	<!-- Hardware -->
	<include file="$(find bender_bringup)/launch/hardware/hardware.launch">
		<arg name="simulation" value="$(arg simulation)"/>
		<arg name="joy_number" value="$(arg joy_number)"/>
		<arg name="tf_gui"     value="$(arg tf_gui)"/>
	</include>

	<!-- cmd_vel_mux -->
	<include file="$(find bender_cmd_vel_mux)/launch/mux.launch"/>

	<!-- RVIZ -->
	<include file="$(find bender_utils)/launch/rviz.launch" if="$(arg rviz)"/>
	
</launch>
